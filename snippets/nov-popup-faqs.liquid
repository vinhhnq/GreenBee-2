<div id="popup_contact_faq" class="modal fade">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header" data-dismiss="modal"><i class="zmdi zmdi-close"></i></div>
      <div class="modal-body">
        <label class="form_text text-center">
          <div class="title_form font-800 text-uppercase">{{ 'page.faqs.form.title_popup_form_html' | t }}</div>
          <div class="subtitle_form">{{ 'page.faqs.form.subtitle_popup_form' | t }}</div>
        </label>
        <div id="p_faq_contact" class="block-form-answer">
          {% form 'contact', id: 'form_contact_faqs' %}
            {% if form.posted_successfully? %}
            <p class="note form-success mb-20">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
              </svg>
              {{ 'page.faqs.form.post_success' | t }}
            </p>
            {% endif %}
            
            {{ form.errors | default_errors }}
            
            <div class="form-group row">
              <div class="col-12 mb-10">
                <input type="text" id="ContactFormName" name="contact[name]" value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}" class="mb-0 {% if form.errors contains 'name' %}input--error{% endif %}" placeholder="{{ 'page.faqs.form.name' | t }}" required>
              </div>
              <div class="col-12 mb-10">
                <input type="email" id="ContactFormEmail" name="contact[email]" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" class="mb-0 {% if form.errors contains 'email' %}input--error{% endif %}" placeholder="{{ 'page.faqs.form.email' | t }}" required>
              </div>
              <div class="col-12 mb-10">
                <input type="tel" id="ContactFormPhone" name="contact[phone]" pattern="[0-9\-]*" value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}" class="mb-0 {% if form.errors contains 'phone' %}input--error{% endif %}" placeholder="{{ 'page.faqs.form.phone' | t }}">
              </div>
              <div class="col-12 mb-20">
                <textarea rows="12" cols="50" id="ContactFormMessage" class="mb-0" name="contact[body]" placeholder="{{ 'page.faqs.form.message' | t }}">{% if form.body %}{{ form.body }}{% endif %}</textarea>
              </div>
            </div>
            <button class="btn btn_submit text-center w-100" type="submit">
              <span>{{ 'page.faqs.form.submit' | t }}</span>
            </button>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>