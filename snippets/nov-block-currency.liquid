<div class="nov-block-currency">
  <div class="dropdown pointer">
    <div class="dropdown-toggle d-flex align-items-center justify-content-between w-100" data-toggle="dropdown">
      <span class="current-currency"></span>
      <i class="zmdi zmdi-caret-down"></i>
    </div>
    <div class="block_currency_selector dropdown-menu dropdown-menu-right w-100">
      {% assign currency = settings.supported_currencies | split: '|' %}
      <div id="currencies">
        {% for value in currency %}
          {% assign currency_item = value | split: ',' %}
          {% assign iso = currency_item[0] | upcase | strip %}
          {% assign name = currency_item[1] | strip %}
          <span data-currency="{{ iso }}">{{ iso }}</span>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
