<style>
  {%- assign bg_image = sst.background_image -%}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top | append: 'px' }};
    padding-bottom: {{ sst.distance_bottom | append: 'px' }};
    {% if sst.background_color != blank %}
      background-color: rgba({{ sst.background_color | color_to_rgb | remove: 'rgb(' | remove: 'rgba(' | remove: ')' | remove: ', 0.0' }}, {{ sst.bg_opacity }}%);
    {% endif %}
    {% if bg_image.src != blank %}
      background-image: url("{{ bg_image | img_url: '1920x' }}");
      background-position: center;
      background-size: cover;
      background-repeat: no-repeat;
    {% endif %}
  }
  #shopify-section-{{ section.id }} .block-scroll {
    animation-duration: {{ sst.time | append:  's' }};
  }
  #shopify-section-{{ section.id }} .block-scroll__item .title {
    color: {{ sst.tt_c }};
    font-size: {{ sst.tt_s | divided_by: 10.0 | append: 'rem' }};
    line-height: {{ sst.tt_lh }};
    letter-spacing: {{ sst.tt_lt | append: 'px' }};
    text-transform: {{ sst.tt_tt }};
  }
  #shopify-section-{{ section.id }} .block-scroll__item p {
    color: {{ sst.t_c }};
    font-size: {{ sst.t_s | divided_by: 10.0 | append: 'rem' }};
    line-height: {{ sst.t_lh }};
    letter-spacing: {{ sst.t_lt | append: 'px' }};
    text-transform: {{ sst.t_tt }};
  }
  #shopify-section-{{ section.id }} .block-scroll__item i {
    color: {{ sst.t_c }};
  }
  #shopify-section-{{ section.id }} .block-scroll__item .item-content:after {
    background-color: {{ sst.t_c }};
  }
  #shopify-section-{{ section.id }} .btn {
    color: {{ sst.c_btn }};
    background-color: {{ sst.b_btn }};
  }
  #shopify-section-{{ section.id }} .btn:hover {
    color: {{ sst.c_btn_h }} !important;
    background-color: {{ sst.b_btn_h }} !important;
  }
  #shopify-section-{{ section.id }} .nov-slick-carousel .slick-arrow {
    color: {{ sst.c_nav }};
  }
  @media(max-width: 991px) {
    #shopify-section-{{ section.id }} .block-scroll__item .title {
      font-size: {{ sst.tt_s_md | divided_by: 10.0 | append: 'rem' }};
    }
    #shopify-section-{{ section.id }} .block-scroll__item p {
      font-size: {{ sst.t_s_md | divided_by: 10.0 | append: 'rem' }};
    }
  }
  @media(max-width: 575px) {
    #shopify-section-{{ section.id }} .distance {
      {%- if sst.distance_top > 20 -%}padding-top: {{ sst.distance_top | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
      {%- if sst.distance_bottom > 20 -%}padding-bottom: {{ sst.distance_bottom | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
    }
  }
</style>