{% assign sst = section.settings %}
<div class="distance{% if sst.class != blank %} {{ sst.class }}{% endif %}{% if sst.animate == true %} wow fadeInUp animated{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if sst.container == 'container' %}
    <div class="container">
  {% elsif sst.container == 'container-fluid' %}
    <div class="container-fluid">
  {% else %}
    <div class="container-full">
  {% endif %} 
    {% if sst.type == 'scroll' %}
      <div class="nov-text-scroll overflow_hidden d-flex">
        <div class="block-scroll d-flex">
          {% for block in section.blocks %}
            {% assign bst = block.settings %}
            <div class="block-scroll__item {{ sst.t_fw }}">
              <div class="item-content d-flex align-items-center justify-content-center">
                {% if block.type == 'text' %}
                  {% if bst.icon !=blank %}<i class="{{ bst.icon }}"></i>{% endif %}
                  {% if bst.title != blank %}<div class="title {{ sst.tt_fw }}{% if bst.t != blank %} has_t{% endif %}">{{ bst.title }}</div>{% endif %}
                  {{ bst.t }}
                  {% if bst.btn != blank %} <a href="{{ bst.btn_link }}" class="btn">{{ bst.btn }}</a>{% endif %}
                {% endif %}
                {% if block.type == 'countdown' %}
                  {% if bst.title != blank %}<div class="title {{ sst.tt_fw }}">{{ bst.title }}</div>{% endif %}
                  <div class="countdownfree d-flex justify-content-center" data-countdown="{{ sst.countdown_timeend }}"></div>
                  {% if bst.btn != blank %} <a href="{{ bst.btn_link }}" class="btn">{{ bst.btn }}</a>{% endif %}
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="block-scroll d-flex">
          {% for block in section.blocks %}
            {% assign bst = block.settings %}
            <div class="block-scroll__item {{ sst.t_fw }}">
              <div class="item-content d-flex align-items-center justify-content-center">
                {% if block.type == 'text' %}
                  {% if bst.icon !=blank %}<i class="{{ bst.icon }}"></i>{% endif %}
                  {% if bst.title != blank %}<div class="title {{ sst.tt_fw }}{% if bst.t != blank %} has_t{% endif %}">{{ bst.title }}</div>{% endif %}
                  {{ bst.t }}
                  {% if bst.btn != blank %} <a href="{{ bst.btn_link }}" class="btn">{{ bst.btn }}</a>{% endif %}
                {% endif %}
                {% if block.type == 'countdown' %}
                  {% if bst.title != blank %}<div class="title {{ sst.tt_fw }}">{{ bst.title }}</div>{% endif %}
                  <div class="countdownfree d-flex justify-content-center" data-countdown="{{ bst.countdown_timeend }}"></div>
                  {% if bst.btn != blank %} <a href="{{ bst.btn_link }}" class="btn">{{ bst.btn }}</a>{% endif %}
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% else %}
      <div class="nov-slick-carousel justify-content-center" data-autoplay="{{ sst.auto }}"
        data-autoplaytimeout="{{ sst.timeauto }}000"
        data-loop="true" 
        data-dots="false"
        data-nav="{{ sst.show_nav }}" 
        data-items="1"
        data-row="1"
        data-vertical="{{ sst.vertical }}"
        data-vertical_sm={{ sst.vertical_sm }}
        adaptiveheight="true">
        {% for block in section.blocks %}
          {% assign bst = block.settings %}
          <div class="block-scroll__item {{ sst.t_fw }} item">
            <div class="item-content d-md-flex text-center text-md-left flex-wrap align-items-center justify-content-center">
              {% if block.type == 'text' %}
                {% if bst.icon !=blank %}<i class="{{ bst.icon }}"></i>{% endif %}
                {% if bst.title != blank %}<div class="title {{ sst.tt_fw }} mb-sm-10">{{ bst.title }}</div>{% endif %}
                {{ bst.t }}
                {% if bst.btn != blank %} <a href="{{ bst.btn_link }}" class="btn mt-sm-20">{{ bst.btn }}</a>{% endif %}
              {% endif %}
              {% if block.type == 'countdown' %}
                {% if bst.title != blank %}<div class="title {{ sst.tt_fw }} mb-sm-10">{{ bst.title }}</div>{% endif %}
                <div class="countdownfree d-flex justify-content-center" data-countdown="{{ bst.countdown_timeend }}"></div>
                {% if bst.btn != blank %} <a href="{{ bst.btn_link }}" class="btn mt-sm-20">{{ bst.btn }}</a>{% endif %}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>
