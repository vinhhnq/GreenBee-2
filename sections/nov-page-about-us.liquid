          {
            "type": "text",
            "id": "fz_title",
            "label": "Font Title",
            "default": "14px"
          },
          {
            "type": "textarea",
            "id": "text_content",
            "label": "Content"
          },
          {
            "type": "color",
            "id": "color_content",
            "label": "Color Content",
            "default": "#232630"
          },
          {
            "type": "text",
            "id": "fz_content",
            "label": "Font Content",
            "default": "14px"
          },
          {
            "type": "text",
            "id": "class",
            "label": "Class"
          }
        ]
      },
      {
        "type": "quote",
        "name": "About Quote",
        "settings": [
          {
            "type": "color",
            "id": "background_color",
            "label": "Background colors",
            "default": "#f1f1f1"
          },
          {
            "type": "image_picker",
            "id": "image_quote",
            "label": "Image Quote"
          },
          {
            "type": "image_picker",
            "id": "icon_quotes",
            "label": "Icon Quote"
          },
          {
            "type": "richtext",
            "id": "text_content",
            "label": "Content"
          },
          {
            "type": "color",
            "id": "color_content",
            "label": "Color Content",
            "default": "#232630"
          },
          {
            "type": "text",
            "id": "fz_content",
            "label": "Font Content",
            "default": "2rem"
          },
          {
            "type": "text",
            "id": "lh_content",
            "label": "Line Height Content",
            "default": "40px"
          },
          {
            "type": "text",
            "id": "author",
            "label": "Author",
            "default": "Kwang Shang. - CEO Vinovathemes"
          },
          {
            "type": "color",
            "id": "color_author",
            "label": "Color Author",
            "default": "#232630"
          },
          {
            "type": "text",
            "id": "fz_author",
            "label": "Font Author",
            "default": "13px"
          },
          {
            "type": "text",
            "id": "class",
            "label": "Class"
          }
        ]
      }
    ]
  }
{% endschema %}