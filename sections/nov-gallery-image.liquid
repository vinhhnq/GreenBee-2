{% endschema %}

<style>
  {%- assign bg_image = sst.background_image -%}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ sst.distance_top | append: 'px' }};
    padding-bottom: {{ sst.distance_bottom | append: 'px' }};
    padding-left: {{ sst.px | append: 'px' }};
    padding-right: {{ sst.px | append: 'px' }};
    {% if sst.background_color != blank %}
      background-color: {{ sst.background_color }};
    {% endif %}
    {% if bg_image.src != blank %}
      background-image: url("{{ bg_image | img_url: '1920x' }}");background-repeat: no-repeat;background-size: cover;
    {% endif %}
  }
  @media(max-width: 767px) {
    #shopify-section-{{ section.id }} .distance {
      {%- if sst.distance_top > 20 -%}padding-top: {{ sst.distance_top | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
      {%- if sst.distance_bottom > 20 -%}padding-bottom: {{ sst.distance_bottom | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
    }
  }
  #shopify-section-{{ section.id }} .gallery-image__item {
    border-radius: {{ sst.bd_radius | append: 'px' }};
  }
  {% if sst.type == 'split' %}
  @media(min-width: 576px) {
    #shopify-section-{{ section.id }} .gallery-image_column {
      height: {{ sst.height_split_sm }}px;
    }
  }
  @media(min-width: 768px) {
    #shopify-section-{{ section.id }} .gallery-image_column {
      height: {{ sst.height_split_md }}px;
    }
  }
  @media(min-width: 992px) {
    #shopify-section-{{ section.id }} .gallery-image_column {
      height: {{ sst.height_split_lg }}px;
    }
  }
  @media(min-width: 1200px) {
    #shopify-section-{{ section.id }} .gallery-image_column {
      height: {{ sst.height_split_xl }}px;
    }
  }
  {% endif %}

  {% for block in section.blocks %}
    {% assign bst = block.settings %}
    #shopify-section-{{ section.id }} .cap-{{ forloop.index }} .gallery-image__text1 {
      font-size: {{ bst.cta_label_n | append: 'px' }};
    }
    @media(max-width: 1199px) {
      #shopify-section-{{ section.id }} .cap-{{ forloop.index }} .gallery-image__text1 {
        font-size: {{ bst.cta_label_n | times: 0.8 | append: 'px' }};
      }
    }
    @media(max-width: 767px) {
      #shopify-section-{{ section.id }} .cap-{{ forloop.index }} .gallery-image__text1 {
        font-size: clamp(10px, {{ bst.cta_label_n | times: 0.7 | append: 'px' }}, 20px);
      }
    }
  {% endfor %}
</style>
