{% assign sst = section.settings %}
{% if sst.md == 5 %}
  {%- assign md = 'col-md-cus-5' -%}
{% else %}
  {%- assign md = 12 | divided_by: sst.md | prepend: 'col-md-' -%}
{% endif %}
<div class="distance{% if sst.class_section != blank %} {{ sst.class_section }}{% endif %}{% if sst.animate == true %} wow fadeInUp animated{% endif %}">
  {% if sst.container == 'container' %}
    <div class="container">
  {% elsif sst.container == 'container-fluid' %}
    <div class="container-fluid">
  {% else %}
    <div class="container-full">
  {% endif %}
    {% if sst.heading != blank or sst.subheading != blank %}
      <div class="title_section {{ sst.title_alignment }}">
        {% if sst.heading != blank %}
          <span class="title" style="color: {{ sst.heading_c }};">{{ sst.heading }}</span>
        {% endif %}
        {% if sst.subheading != blank %}
          <span class="sub_title" style="color: {{ sst.subheading_c }};">{{ sst.subheading }}</span>
        {% endif %}
      </div>
    {% endif %}
    <div class="{% if sst.type == 'split' %}split-gallery d-block d-sm-flex flex-wrap{% else %}default-gallery{% endif %} row {% if sst.spacing_1 %}spacing-1{% else %}spacing-{{ sst.spacing }}{% endif %}">
      {% for block in section.blocks %}
        {% assign bst = block.settings %}
        <div class="gallery-image_column position-relative{% if sst.spacing_1 == false %} mb-{{ sst.spacing }}{% endif %}{% if sst.type == 'gallery' %} {{ md }}{% endif %}{% if bst.class != blank %} {{ bst.class }}{% endif %}">
          <div class="gallery-image__item overflow_hidden position-relative{% if bst.cta_label != blank or bst.btn_label != blank %} hs-cap{% endif %}{% if sst.style_img_1 %} nov-sh-image-1{% endif %}{% if sst.style_img_2 %} nov-sh-image-2{% endif %}">
            {% if bst.link != blank %}
              <a class="w-100 gallery-image__link" href="{{ bst.link }}">
            {% endif %}
            {% if bst.image != blank %}
              <img data-src="{{ bst.image | img_url: '' }}" class="lazyload{% if bst.img_xs != blank %} d-none d-sm-block{% endif %}" width="{{ bst.image.width }}" height="{{ bst.image.height }}">
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            {% if bst.img_xs != blank %}
              <img data-src="{{ bst.img_xs | img_url: '' }}" class="lazyload d-sm-none" width="{{ bst.img_xs.width }}" height="{{ bst.img_xs.height }}">
            {% endif %}
            {% if bst.link != blank %}
              </a>
            {% endif %}

            {% if bst.cta_label != blank or bst.cta_label2 != blank or bst.btn_label != blank %}
              <div class="gallery-image__caption position-absolute cap-{{ forloop.index }}">
                <div class="image-caption__content">
                  {% if bst.cta_label != blank %}
                  <div class="gallery-image__text1{% if bst.ff_1 == 'f_pr' %} f_pr{% endif %} font-800" style="color: {{ bst.cta_label_c }}">{{ bst.cta_label }}</div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div><!-- End row -->
  </div><!-- End container -->
</div>
{% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
{% endif %}
