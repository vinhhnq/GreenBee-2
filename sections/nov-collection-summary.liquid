<style>
  #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
    width: {{ xs }}%;
    flex: 0 0 {{ xs }}%;
  }
  @media(min-width:  576px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ sm }}%;
      flex: 0 0 {{ sm }}%;
    }
  }
  @media(min-width:  768px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ md }}%;
      flex: 0 0 {{ md }}%;
    }
  }
  @media(min-width:  992px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ lg }}%;
      flex: 0 0 {{ lg }}%;
    }
  }
  @media(min-width:  1200px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ xl }}%;
      flex: 0 0 {{ xl }}%;
    }
  }
  @media(min-width:  1440px) {
    #shopify-section-{{ section.id }} .nov-slick-carousel:not(.slick-initialized) .block {
      width: {{ xxl }}%;
      flex: 0 0 {{ xxl }}%;
    }
  }
  {%- assign bg_image = sst.background_image -%}
  {% if sst.bg_size == 'full' %}
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ sst.distance_top | append: 'px' }};
      padding-bottom: {{ sst.distance_bottom | append: 'px' }};
      {% if sst.background_color != blank %}
        background: {{ sst.background_color }};
      {% endif %}
    }
    {% if bg_image.src != blank %}
      #shopify-section-{{ section.id }} .distance:before {
        content:  "";
        position: absolute;
        top:  0;
        left: 0;
        width: 100%;
        height: clamp(300px, 65%, calc(100% - 250px));
        background: url("{{ bg_image | img_url: '1920x' }}") no-repeat center bottom;
        background-size: cover;
      }
    {% endif %}
    @media(max-width: 767px) {
      #shopify-section-{{ section.id }} .distance {
        {%- if sst.distance_top > 20 -%}padding-top: {{ sst.distance_top | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
        {%- if sst.distance_bottom > 20 -%}padding-bottom: {{ sst.distance_bottom | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
      }
    }
  {% else %}
    #shopify-section-{{ section.id }} .container-inner {
      padding-top: {{ sst.distance_top | append: 'px' }};
      padding-bottom: {{ sst.distance_bottom | append: 'px' }};
      {% if sst.background_color != blank %}
        background: {{ sst.background_color }};
      {% endif %}
    }
    {% if bg_image.src != blank %}
      #shopify-section-{{ section.id }} .container-inner:before {
        content:  "";
        position: absolute;
        top:  0;
        left: 0;
        width: 100%;
        height: clamp(300px, 65%, calc(100% - 250px));
        background: url("{{ bg_image | img_url: '1920x' }}") no-repeat center bottom;
        background-size: cover;
      }
    {% endif %}
    @media(max-width: 767px) {
      #shopify-section-{{ section.id }} .container-inner {
        {%- if sst.distance_top > 30 -%}padding-top: {{ sst.distance_top | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
        {%- if sst.distance_bottom > 30 -%}padding-bottom: {{ sst.distance_bottom | times: 0.7 | round: 0 | append: 'px' }};{%- endif -%}
      }
    }
  {% endif %}
  #shopify-section-{{ section.id }} .collec-item {
    border-radius: {{ sst.img_corner }}px;
    background-color: {{ sst.bg_item }};
  }
  #shopify-section-{{ section.id }} .respone_image {
    border-radius: {{ sst.img_corner }}px {{ sst.img_corner }}px 0 0;
  }
  #shopify-section-{{ section.id }} .collec-title {
    font-size: {{ sst.t_s | divided_by: 10.0 | append: 'rem' }};
    color:  {{ sst.t_c }};
  }
  #shopify-section-{{ section.id }} .collec-desc {
    font-size: {{ sst.st_s | divided_by: 10.0 | append: 'rem' }};
    color:  {{ sst.st_c }};
  }
  #shopify-section-{{ section.id }} .link {
    color: {{ sst.c_btn }};
  }
  #shopify-section-{{ section.id }} .link:hover {
    color: {{ sst.c_btn_h }};
  }
</style>
