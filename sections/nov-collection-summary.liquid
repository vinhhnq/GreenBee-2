{% assign sst = section.settings %}
{%- assign xxl = 100 | divided_by: sst.xxl -%}
{%- assign xl = 100 | divided_by: sst.xl -%}
{%- assign lg = 100 | divided_by: sst.lg -%}
{%- assign md = 100 | divided_by: sst.md -%}
{%- assign sm = 100 | divided_by: sst.sm -%}
{%- assign xs = 100 | divided_by: sst.xs -%}
<div class="distance position-relative{% if sst.class_section != blank %} {{ sst.class_section }}{% endif %}{% if sst.animate == true %} wow fadeInUp animated{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if sst.show_img_sticky %}
    {% if sst.img_sticky1 != blank %}
      <div class="block-sticky d-none d-lg-block"><img data-src="{{ sst.img_sticky1 | img_url: '' }}" class="lazyload" alt="{{ sst.img_sticky1.alt }}"></div>
    {% endif %}
    {% if sst.img_sticky2 != blank %}
      <div class="block-sticky d-none d-lg-block"><img data-src="{{ sst.img_sticky2 | img_url: '' }}" class="lazyload" alt="{{ sst.img_sticky2.alt }}"></div>
    {% endif %}
  {% endif %}
  {% if sst.container == 'container' %}
    <div class="container">
  {% elsif sst.container == 'container-fluid' %}
    <div class="container-fluid">
  {% else %}
    <div class="container-full">
  {% endif %} 
    <div class="container-inner position-relative">
      {% if sst.img_top != blank %}
        <div class="text-center">
          {% if sst.img_top_link != blank %}
            <a href="{{ sst.img_top_link }}">
          {% endif %}
          <img src="{{ sst.img_top | img_url: '265x151' }}" class="img-top lazyload" alt="{{ sst.img_top.alt }}">
          {% if sst.img_top_link != blank %}
            </a>
          {% endif %}
        </div>
      {% endif %}
      {% if sst.heading != blank or sst.subheading != blank %}
        <div class="title_section {{ sst.title_alignment }}">
          {% if sst.heading != blank %}
            <span class="title" style="color: {{ sst.heading_c }};">{{ sst.heading }}</span>
          {% endif %}
          {% if sst.subheading != blank %}
            <span class="sub_title" style="color: {{ sst.subheading_c }};">{{ sst.subheading }}</span>
          {% endif %}
        </div>
      {% endif %}
      <div class="nov-slick-carousel row spacing-35{% if sst.show_dot %} pb-40{% endif %}"
        data-autoplay="{{ sst.autoplay }}"
        data-autoplaytimeout="{{ sst.autoplay_speed }}"
        data-loop="true"
        data-nav="false"
        data-dots="{{ sst.show_dot }}" 
        data-items_xxl="{{ sst.xxl }}" 
        data-items="{{ sst.xl }}" 
        data-items_lg="{{ sst.lg }}" 
        data-items_md="{{ sst.md }}" 
        data-items_sm="{{ sst.sm }}"
        data-items_xs="{{ sst.xs }}"
        data-row="1"
        {% if sst.one_slider == true %}data-oneslider="1"{% endif %}>
        {% for block in section.blocks %}
        {% assign bst = block.settings %}
        <div class="block p_item">
          <div class="collec-item position-relative text-center pb-35">
            {% if bst.image != blank %}
              {% render 'nov-aspect-image', image: bst.image %}
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            {% if bst.cta_label != blank %}
              <div class="collec-title font-800 mt-25 mb-15">{{ bst.cta_label }}</div>
            {% endif %}
            {% if bst.desc != blank %}
              <div class="collec-desc mt-10 p-5 pt-0 pb-0">{{ bst.desc }}</div>
            {% endif %}
            {% if sst.show_btn %}
              <a href="{{ bst.link }}" class="link text-capitalize mt-20 d-inline-flex align-items-center">{{ 'sections.button.shop_now' | t }}<i class="zmdi zmdi-long-arrow-right"></i></a>
            {% endif %}
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div><!-- End container -->
</div>
{% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
{% endif %}

